<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StateLayout">
        <attr name="loading_view_layout" format="reference" />

        <attr name="error_text" format="reference" />
        <attr name="error_view_layout" format="reference" />

        <attr name="empty_text" format="reference" />
        <attr name="empty_view_layout" format="reference" />

    </declare-styleable>

    <declare-styleable name="DefaultExoPlayerView">
        <attr name="surface_type"/>

    </declare-styleable>

    <!-- Must be kept in sync with DefaultExoPlayerView -->
    <attr name="surface_type" format="enum">
        <enum name="none" value="0"/>
        <enum name="surface_view" value="1"/>
        <enum name="texture_view" value="2"/>
    </attr>

</resources>